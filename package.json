{
	"name": "mvp-discord-bot",
	"main": "dist/main.js",
	"private": true,
	"scripts": {
		"deploy:commands": "tsx ./deploy/commands.ts",
		"dev": "tsx watch ./src/main.ts",
		"start": "node ./dist/main.js",
		"prepare": "husky install && chmod ug+x .husky/*"
	},
	"lint-staged": {
		"**/*.(json|js|jsx|ts|tsx)": ["biome format --write"]
	},
	"dependencies": {
		"@discordjs/voice": "^0.16.0",
		"discord.js": "^14.13.0",
		"dotenv": "^16.3.1",
		"ffmpeg-static": "^5.2.0",
		"google-tts-api": "^2.0.2",
		"libsodium-wrappers": "^0.7.13",
		"typescript": "^5.2.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.3.3",
		"husky": "^8.0.3",
		"lint-staged": "^15.0.2",
		"tsx": "^3.14.0"
	}
}
